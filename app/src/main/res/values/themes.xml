<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFirstApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/SmallFont</item>
    </style>

    <style name="MyAppButton" parent = "Theme.MyFirstApplication">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@android:color/holo_blue_bright</item>

    </style>

    <style name="HeadText" parent = "MyAppButton">
        <item name="android:textStyle">bold</item>

    </style>

    <style name="SmallFont" parent="Theme.MyFirstApplication">
        <item name="android:color">@color/gray</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>